<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="com.nervestaple.gtdinbox.jpa">

        <class>com.nervestaple.gtdinbox.model.inboxcontext.InboxContext</class>
        <class>com.nervestaple.gtdinbox.model.item.actionitem.ActionItem</class>
        <class>com.nervestaple.gtdinbox.model.item.referenceitem.ReferenceItem</class>
        <class>com.nervestaple.gtdinbox.model.project.Project</class>
        <class>com.nervestaple.gtdinbox.model.reference.category.Category</class>
        <class>com.nervestaple.gtdinbox.model.tag.Tag</class>

        <properties>
            <property name="hibernate.ejb.cfgfile" value="/hibernate.cfg.xml"/>
        </properties>
    </persistence-unit>
</persistence>

