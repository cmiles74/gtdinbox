<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-mapping
>
    <class
        name="com.nervestaple.gtdinbox.model.tag.Tag"
        table="Tags"
    >

        <id
            name="id"
            column="tagId"
            type="java.lang.Long"
            unsaved-value="null"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-Tag.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="name"
            type="java.lang.String"
            update="true"
            insert="true"
            column="name"
        />

        <property
            name="deleted"
            type="java.lang.Boolean"
            update="true"
            insert="true"
            column="deleted"
        />

        <set
            name="referenceItems"
            table="referenceItemTags"
            lazy="true"
            cascade="none"
            sort="unsorted"
        >

            <key
                column="referenceItemId"
            >
            </key>

            <many-to-many class="com.nervestaple.gtdinbox.model.item.referenceitem.ReferenceItem" />

        </set>

        <set
            name="actionItems"
            table="actionItemTags"
            lazy="true"
            cascade="none"
            sort="unsorted"
        >

            <key
                column="actionItemId"
            >
            </key>

            <many-to-many class="com.nervestaple.gtdinbox.model.item.actionitem.ActionItem" />

        </set>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-Tag.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
