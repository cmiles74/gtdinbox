<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-mapping
>
    <class
        name="com.nervestaple.gtdinbox.model.item.actionitem.ActionItem"
        table="ActionItems"
    >
        <cache usage="read-write" />

        <id
            name="id"
            column="actionItemId"
            type="java.lang.Long"
            unsaved-value="null"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-ActionItem.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="description"
            type="java.lang.String"
            update="true"
            insert="true"
        >
            <column
                name="description" 
                length="32672"
            />
        </property>

        <property
            name="descriptionTextStyleType"
            type="com.nervestaple.gtdinbox.model.textstyletypes.TextStyleTypeUserType"
            update="true"
            insert="true"
        >
            <column
                name="descriptionTextStyleType" 
            />
        </property>

        <property
            name="createdDate"
            type="java.util.Date"
            update="true"
            insert="true"
            column="createdDate"
        />

        <property
            name="lastModifiedDate"
            type="java.util.Date"
            update="true"
            insert="true"
            column="lastModifiedDate"
        />

        <property
            name="deleted"
            type="java.lang.Boolean"
            update="true"
            insert="true"
            column="deleted"
        />

        <many-to-one
            name="project"
            class="com.nervestaple.gtdinbox.model.project.Project"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="projectId"
        />

        <many-to-one
            name="inboxContext"
            class="com.nervestaple.gtdinbox.model.inboxcontext.InboxContext"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="inboxContextId"
        />

        <property
            name="completedDate"
            type="java.util.Date"
            update="true"
            insert="true"
            column="completedDate"
        />

        <set
            name="tags"
            table="actionItemTags"
            lazy="true"
            inverse="true"
            cascade="save-update"
            sort="unsorted"
        >
            <cache 
                usage="read-write" 
            />

            <key
                column="tagId"
            >
            </key>

            <many-to-many class="com.nervestaple.gtdinbox.model.tag.Tag" />

        </set>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-ActionItem.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
