<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>

<!-- IzPack install definition file for GTDInbox. -->

<installation version="1.0">

    <info>
        <appname>GTD Inbox</appname>
        <appversion>0.5.1a</appversion>
        <authors>
            <author name="Christopher Miles" email="twitch@nervestaple.com"/>
        </authors>
        <url>http://projects.nervestaple.com/gtdinbox</url>
    </info>

    <guiprefs width="640" height="480" resizable="no"/>

    <locale>
        <langpack iso3="eng"/>
    </locale>

    <resources>
        <!--<res id="LicencePanel.licence" src="Licence.txt"/>
        <res id="InfoPanel.info" src="Readme.txt"/>-->
        <res src="izpack-resources/installer-image.png"
             id="Installer.image"/>
        <res src="shortcutSpec.xml" id="shortcutSpec.xml"/>
    </resources>

    <native type="izpack" name="ShellLink.dll"/>

    <panels>
        <panel classname="HelloPanel"/>
        <!--<panel classname="InfoPanel"/>
        <panel classname="LicencePanel"/>-->
        <panel classname="TargetPanel"/>
        <panel classname="PacksPanel"/>
        <panel classname="InstallPanel"/>
        <panel classname="ShortcutPanel"/>
        <panel classname="FinishPanel"/>
    </panels>

    <packs>
        <pack name="Base" required="yes">
            <description>The GTD Inbox files</description>
            <!--<file src="dist/GTDInbox-windows" targetdir="$INSTALL_PATH"/>-->
            <fileset dir="dist/GTDInbox-windows" targetdir="$INSTALL_PATH" includes="**"/>
        </pack>
    </packs>

</installation>
